<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_profile_user_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/profile_man"
            android:layout_marginTop="20dp"
            app:civ_border_color="#FFF"
            app:civ_border_width="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change picture"
            android:background="@drawable/bg"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:id="@+id/edit_profile_picture_btn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:id="@+id/pic_btns"
            android:visibility="gone">

            <Button
                android:id="@+id/change_pic_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:drawableLeft="@drawable/ic_camera_alt"
                android:padding="3dp"
                android:text="Camera"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/change_pic_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:drawableLeft="@drawable/ic_insert_photo"
                android:text="Gallery"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit_profile_user_name_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:gravity="center"
            android:hint="User Name"
            android:textColorHint="@color/colorWhite"/>

        <EditText
            android:id="@+id/edit_profile_user_gender_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:hint="Gender"
            android:textColorHint="@color/colorWhite"/>

        <EditText
            android:id="@+id/edit_profile_user_address_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:hint="User address"
            android:textColorHint="@color/colorWhite"/>

        <Button
            android:id="@+id/edit_profile_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg"
            android:text="Save"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"/>

    </LinearLayout>

</RelativeLayout>