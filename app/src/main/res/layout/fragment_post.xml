<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/colorAccent"
    android:padding="3dp">

    <TextView
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/share_layout"
        android:layout_below="@id/BigPostImage"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="2dp"
            android:src="@drawable/whatsapp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="72dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/waze1"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="70dp"
            android:padding="2dp"
            android:id="@+id/waze"
            tools:ignore="MissingConstraints"
            android:background="@null"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook2"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="70dp"
            android:padding="2dp"
            android:id="@+id/facebook"
            tools:ignore="MissingConstraints"
            android:background="@null"/>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/maps"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="70dp"
            android:padding="2dp"
            android:id="@+id/googlemaps"
            tools:ignore="MissingConstraints"
            android:background="@null"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/BigPostImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/post_title"
        android:layout_margin="5dp"
        android:contentDescription="Item Photo"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_comments_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_layout"
        android:layout_above="@+id/layout"
        android:layout_margin="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:id="@+id/post_comment_et"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:hint="@string/comment"
            android:textColorHint="@color/colorWhite"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/post_add_comment_btn"
            android:background="@drawable/bg"
            android:text="@string/post_comment_btn"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</RelativeLayout>

